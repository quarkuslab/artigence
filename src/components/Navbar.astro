<style>
    .nav {
        display: flex;
        background: #ffffff;
        width: 95%;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
        position: relative;
    }

    .logowrapper {
        display: flex;
        flex-direction: column; /* Stack logo and text vertically */
        align-items: center; /* Center align items */
        color: rgb(0, 0, 0);
    }

    .logo {
        margin-bottom: 5px; /* Space between logo and text */
        height: 40px; /* Set a specific height for the logo */
    }

    h3 {
        margin: 0;
        font-size: 1.5em; /* Font size for brand text */
        text-align: center; /* Center text */
    }

    .link {
        display: flex;
        gap: 10px; /* Space between icons */
        cursor: pointer;
    }

    .link img {
        height: 30px; /* Set height for icons */
    }

    /* Toggle checkbox hidden */
    .menu-toggle {
        display: none; /* Hide the toggle checkbox */
    }

    /* Toggle icon styling */
    .menu-icon {
        display: none; /* Hide the toggle icon by default */
        font-size: 1.5em; /* Font size for the toggle icon */
        cursor: pointer; /* Change cursor to pointer on hover */
    }

    /* Responsive styling for mobile */
    @media (max-width: 600px) {
        .nav {
            flex-direction: row; /* Arrange items in a row */
            justify-content: space-between; /* Space between items */
        }

        .logowrapper {
            justify-content: flex-start; /* Align items to the start */
        }

        /* Hide the link container by default on mobile */
        .link {
            display: flex;
            flex-direction: column; /* Stack icons vertically */
            position: fixed; /* Fix position for sliding menu */
            top: 0; /* Align to top */
            right: -100vw; /* Position offscreen */
            height: 100vh; /* Full viewport height */
            width: 60vw; /* Width of the slide-out menu */
            background: #ffffff; /* Background color */
            padding-top: 20px; /* Space from the top */
            transition: right 0.3s ease; /* Smooth transition */
            align-items: center; /* Center align icons */
            gap: 20px; /* Space between icons */
            box-shadow: -4px 0 8px rgba(0, 0, 0, 0.2); /* Shadow effect */
        }

        .menu-icon {
            display: block; /* Show toggle icon on mobile */
            z-index: 1; /* Ensure icon is above other content */
            font-size: 1.8em; /* Increase font size */
            position: relative; /* Relative positioning */
        }

        /* Slide the menu into view when checkbox is checked */
        .menu-toggle:checked ~ .link {
            right: 0; /* Slide in the menu */
        }
    }
    span {
        color: #114C40;
    }
</style>
